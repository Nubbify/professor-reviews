<h1>Department: {{this.name}}</h1>
<div class="row">
    <div class="col-6">
        <h1>Classes</h1>
        <ul class="list-group">
            {{#each classes}}
                <li class="list-group-item"><a href="/class/{{this.name}}">{{this.name}}</a></li>
            {{/each}}
        </ul>
    </div>
    <div class="col-6">
        <h1>Teachers</h1>
        <ul class="list-group">
            {{#each teachers}}
                <li class="list-group-item"><a href="/teacher/{{this.name}}">{{this.name}}</a></li>
            {{/each}}
        </ul>
    </div>
</div>