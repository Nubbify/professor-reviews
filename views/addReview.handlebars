<h1>Create New Review</h1>
{{#if error}}
    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        Error: {{error}}
    </div>
{{/if}}
<article>
    <form id="reviewForm" method="POST" action="/review/add">
        <div class="input-field">
            <div class="form-group">
                <label for="teacher">Teacher</label>
                <select class="form-control" id="teacher" name="teacher">
                    {{#each teachers}}
                        <option value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="input-field">
            <div class="form-group">
                <label for="class">Class</label>
                <select class="form-control" id="class" name="class">
                    {{#each classes}}
                        <option value="{{this.name}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="input-field">
            <label>Rating:</label>
            <input type="number" name="rating" min="1" max="10" placeholder="1-10">
        </div>
        <div class="input-field">
            <label>Review:</label>
            <textarea class="form-control" id="review" name="review" rows="3" placeholder="Amazing teacher, great teaching style!"></textarea>
        </div>
        <br>
        <div class="input-field">
            <label>Your Name:</label>
            <input type="text" name="name" size="50" placeholder="Andy B.">
        </div>
        <button type="submit" id="submit" disabled="disabled" value="submit">Create New Review</button>
    </form>
</article>

<script src="/public/js/formStuff.js"></script>